#!/usr/bin/make -f

export DH_VERBOSE = 1

%:
	dh $@

override_dh_auto_build:
	./retropie_packages.sh lr-mgba depends
	./retropie_packages.sh lr-mgba sources
	./retropie_packages.sh lr-mgba build

override_dh_builddeb:
	dh_builddeb -- -Zgzip -z9

override_dh_install:
	./retropie_packages.sh lr-mgba install
	./retropie_packages.sh lr-mgba configure
	mkdir -p debian/retropie-emulators-mgba/opt
	mv /opt/retropie debian/retropie-emulators-mgba/opt/

override_dh_usrlocal:

override_dh_auto_test:

override_dh_auto_configure: