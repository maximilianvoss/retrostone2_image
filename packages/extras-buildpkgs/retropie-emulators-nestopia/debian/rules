#!/usr/bin/make -f

export DH_VERBOSE = 1

%:
	dh $@

override_dh_auto_build:
	./retropie_packages.sh lr-nestopia depends
	./retropie_packages.sh lr-nestopia sources
	./retropie_packages.sh lr-nestopia build

override_dh_builddeb:
	dh_builddeb -- -Zgzip -z9

override_dh_install:
	./retropie_packages.sh lr-nestopia install
	./retropie_packages.sh lr-nestopia configure
	mkdir -p debian/retropie-emulators-nestopia/opt
	mv /opt/retropie debian/retropie-emulators-nestopia/opt/

override_dh_usrlocal:

override_dh_auto_test:

override_dh_auto_configure: