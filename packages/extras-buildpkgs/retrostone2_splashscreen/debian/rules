#!/usr/bin/make -f

export DH_VERBOSE = 1

%:
	dh $@

override_dh_auto_build:

override_dh_builddeb:
	dh_builddeb -- -Zgzip -z9

override_dh_install:
	mkdir -p debian/usr/share/plymouth/themes/retrostone2
	git clone https://github.com/maximilianvoss/retrostone2_splashscreen.git /tmp/retrostone2_splashscreen
	mv /tmp/retrostone2_splashscreen/src/* debian/usr/share/plymouth/themes/retrostone2/

override_dh_usrlocal:

override_dh_auto_test:

override_dh_auto_configure: