#!/usr/bin/make -f

export DH_VERBOSE = 1

%:
	dh $@

override_dh_auto_build:
	./retropie_packages.sh lr-beetle-ngp depends
	./retropie_packages.sh lr-beetle-ngp sources
	./retropie_packages.sh lr-beetle-ngp build

override_dh_builddeb:
	dh_builddeb -- -Zgzip -z9

override_dh_install:
	./retropie_packages.sh lr-beetle-ngp install
	./retropie_packages.sh lr-beetle-ngp configure
	mkdir -p debian/retropie-emulators-beetle-ngp/opt/retropie/configs/all/retroarch/cores/
	mv /opt/retropie/configs/all/retroarch/cores/mednafen_ngp_libretro.info debian/retropie-emulators-beetle-ngp/opt/retropie/configs/all/retroarch/cores/
	mkdir -p debian/retropie-emulators-beetle-ngp/opt/retropie/configs/all/retroarch/shaders/handheld/console-border/
	mv /opt/retropie/configs/all/retroarch/shaders/handheld/console-border/ngpc-*.glslp debian/retropie-emulators-beetle-ngp/opt/retropie/configs/all/retroarch/shaders/handheld/console-border/
	mkdir -p debian/retropie-emulators-beetle-ngp/opt/retropie/configs/all/retroarch/shaders/handheld/console-border/resources/
	mv /opt/retropie/configs/all/retroarch/shaders/handheld/console-border/resources/ngpc-border-square-4x.png debian/retropie-emulators-beetle-ngp/opt/retropie/configs/all/retroarch/shaders/handheld/console-border/resources/
	mkdir -p debian/retropie-emulators-beetle-ngp/opt/retropie/configs
	mv /opt/retropie/configs/ngp debian/retropie-emulators-beetle-ngp/opt/retropie/configs
	mv /opt/retropie/configs/ngpc debian/retropie-emulators-beetle-ngp/opt/retropie/configs
	mkdir -p debian/retropie-emulators-beetle-ngp/opt/retropie/libretrocores/
	mv /opt/retropie/libretrocores/lr-beetle-ngp debian/retropie-emulators-beetle-ngp/opt/retropie/libretrocores/


override_dh_usrlocal:

override_dh_auto_test:

override_dh_auto_configure:

dh_strip_nondeterminism: