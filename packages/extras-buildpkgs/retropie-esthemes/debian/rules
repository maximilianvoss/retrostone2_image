#!/usr/bin/make -f

export DH_VERBOSE = 1

%:
	dh $@

override_dh_auto_build:
	./retropie_packages.sh esthemes depends
	./retropie_packages.sh esthemes sources
	./retropie_packages.sh esthemes build

override_dh_builddeb:
	dh_builddeb -- -Zgzip -z9

override_dh_install:
	./retropie_packages.sh esthems install
	./retropie_packages.sh esthems configure
	mkdir -p debian/retropie-esthemes/etc/emulationstation/
	mv /etc/emulationstation/themes debian/retropie-esthemes/etc/emulationstation

override_dh_usrlocal:

override_dh_auto_test:

override_dh_auto_configure: