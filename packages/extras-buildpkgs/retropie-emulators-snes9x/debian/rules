#!/usr/bin/make -f

export DH_VERBOSE = 1

INSTALL_BASEDIR=debian/retropie-emulators-snes9x

INSTALL=opt/retropie/libretrocores/lr-snes9x/*

%:
	dh $@

override_dh_auto_build:
	./retropie_packages.sh lr-snes9x depends
	./retropie_packages.sh lr-snes9x sources
	./retropie_packages.sh lr-snes9x build

override_dh_builddeb:
	dh_builddeb -- -Zgzip -z9

override_dh_install:
	./retropie_packages.sh lr-snes9x install
	./retropie_packages.sh lr-snes9x configure

	for file in $(INSTALL); do \
		mkdir -p $(INSTALL_BASEDIR)/$$(dirname $$file); \
		ls /$$file; \
		mv /$$file $(INSTALL_BASEDIR)/$$(dirname $$file)/; \
	done

override_dh_usrlocal:

override_dh_auto_test:

override_dh_auto_configure:

dh_strip_nondeterminism: